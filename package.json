{
  "name": "superteam-earn-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram notification bot for Superteam Earn - provides personalized alerts for bounties and projects",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run db:generate && npm run bot-db:generate && tsc && cp src/db/schema.sql dist/db/",
    "start": "node dist/index.js",
    "start:prod": "npm run build && npm run start",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "bot-db:seed": "tsx prisma/bot-seed.ts",
    "bot-db:migrate": "prisma migrate dev --schema=prisma/bot-schema.prisma",
    "bot-db:generate": "prisma generate --schema=prisma/bot-schema.prisma",
    "bot-db:studio": "prisma studio --schema=prisma/bot-schema.prisma",
    "verify-db": "tsx scripts/verify-db.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "telegram",
    "bot",
    "superteam",
    "earn",
    "notifications"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@types/express": "^5.0.2",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-cron": "^4.1.0",
    "pg": "^8.16.0",
    "prisma": "^6.9.0",
    "telegraf": "^4.16.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  }
}